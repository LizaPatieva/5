#include <iostream> //Подключение библиотеки iostream
#include <math.h> //Подключение библиотеки math.h
using namespace std;
int main(void) //Точка входа в программу
{
double x1, y1, x2, y2, x3, y3, AB, BC, AC, P, Pp, S;
cout<<"x1="<<x1<<endl; //Выводим на экран
cin>>x1; //Вводим значение x1
cout<<"y1="<<y1<<endl; //Выводим на экран
cin>>y1; //Вводим значение y1
cout<<"x2="<<x2<<endl; //Выводим на экран
cin>>x2; //Вводим значение x2
cout<<"y2="<<y2<<endl; //Выводим на экран
cin>>y2; //Вводим значение y2
cout<<"x3="<<x3<<endl; //Выводим на экран
cin>>x3; //Вводим значение x3
cout<<"y3="<<y3<<endl; //Выводим на экран
cin>>y3; //Вводим значение y3
AB=abs(sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1))); //Вычисляем длину стороны AB
BC=abs(sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2))); //Вычисляем длину стороны BC
AC=abs(sqrt((x3-x1)*(x3-x1)+(y3-y1)*(y3-y1))); //Вычисляем длину стороны AC
P=AB+BC+AC; //Вычисляем периметр треугольника
Pp=(AB+BC+AC)/2; //Вычисляем полупериметр треугольника
S=sqrt(Pp*(Pp-AB)*(Pp-BC)*(Pp-AC)); //Вычисляем площадь треугольника
cout<<"P="<<P<<endl; //Выводим на экран значение периметра
cout<<"S="<<S<<endl; //Выводим на экран значение площади
return 0; //Возврат целочисленного значение перед завершением функции
}
