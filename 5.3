#include <iostream> //Подключение библиотеки iostream
#include <math.h> //Подключение библиотеки math.h
int main(void) //Точка входа в программу
{
  float A, B, C; //Назначение переменных
  printf("A:"); //Выводим на экран
  scanf("%f", &A); //Вводим значение переменной A
  printf("B:"); //Выводим на экран
  scanf("%f", &B); //Вводим значение переменной B
  printf("C:"); //Выводим на экран
  scanf("%f", &C); //Вводим значение переменной C
  float AC = abs(A-C); //Определяем длину отрезка AC
  printf("AC:%f\n", AC); //Выводим на экран длину отрезка AC
  float BC = abs(B-C); //Определяем длину отрезка BC
  printf("BC:%f\n", BC); //Выводим на экран длину отрезка BC
  printf("AC*BC:%f\n", AC*BC); //Выводим на экран произведение длин отрезков
  return 0; //Возврат целочисленного значения перед завершением функции
}
